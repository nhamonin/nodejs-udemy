extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/cart.css")

block content
  main
    if products.length > 0
      h1.centered Cart
      ul.cart__item-list
        each product in products
          li.cart__item #{ product.title } (#{ product.cartItem.quantity }) - $#{ product.price * product.cartItem.quantity }
            form(action="/cart-delete-product", method="post")
              input(type="hidden", name="productId", value=product.id)
              button.btn.danger(type="submit") Delete
      p.centered Total: $#{ totalPrice }
      .centered
        form(action="/create-order", method="post")
          button.btn(type="submit") Order Now
    else
      h1 No Products In Cart!
